# Presenton Environment Configuration
# Copy this to .env and fill in your API keys

# ============================================
# LLM Configuration (choose one provider)
# ============================================

# Options: "openai", "google", "anthropic", "ollama", "custom"
LLM="custom"

# --------------------------------------------
# OpenRouter (Recommended for flexibility)
# --------------------------------------------
CUSTOM_LLM_URL="https://openrouter.ai/api/v1"
CUSTOM_LLM_API_KEY="sk-or-v1-..."
CUSTOM_MODEL="google/gemini-2.0-flash-exp:free"
TOOL_CALLS="false"
DISABLE_THINKING="false"

# --------------------------------------------
# OpenAI
# --------------------------------------------
# OPENAI_API_KEY="sk-..."
# OPENAI_MODEL="gpt-4o"

# --------------------------------------------
# Google Gemini
# --------------------------------------------
# GOOGLE_API_KEY="..."
# GOOGLE_MODEL="models/gemini-2.0-flash"

# --------------------------------------------
# Anthropic Claude
# --------------------------------------------
# ANTHROPIC_API_KEY="sk-ant-..."
# ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# --------------------------------------------
# Ollama (Local Models)
# --------------------------------------------
# OLLAMA_URL="http://localhost:11434"
# OLLAMA_MODEL="llama3.2:3b"

# ============================================
# Image Generation (choose one provider)
# ============================================

# Options: "dall-e-3", "gemini_flash", "pexels", "pixabay"
IMAGE_PROVIDER="gemini_flash"

# If using Gemini Flash for images, need Google API key
GOOGLE_API_KEY="..."

# If using Pexels (free)
# PEXELS_API_KEY="..."

# If using Pixabay (free)
# PIXABAY_API_KEY="..."

# ============================================
# App Configuration
# ============================================

# Allow users to change API keys in UI
CAN_CHANGE_KEYS="true"

# Web search for OpenAI, Google, and Anthropic
WEB_GROUNDING="false"

# Disable anonymous telemetry
DISABLE_ANONYMOUS_TELEMETRY="false"

# App data directory (where presentations are stored)
APP_DATA_DIRECTORY="/Users/shafenkhan/projects/presenton/app_data"

# ============================================
# Notes
# ============================================

# Free tier recommendations:
# - Text: google/gemini-2.0-flash-exp:free (via OpenRouter)
# - Images: Gemini Flash (requires Google API key) OR Pexels (free API)
#
# Rate limits (Gemini free on OpenRouter):
# - 20 requests/minute
# - 200 requests/day
# - 8,192 max tokens per response
#
# To get API keys:
# - OpenRouter: https://openrouter.ai/keys
# - Google AI Studio: https://aistudio.google.com/app/apikey
# - Pexels: https://www.pexels.com/api/
# - Pixabay: https://pixabay.com/api/docs/
